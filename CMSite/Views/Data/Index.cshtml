@model IEnumerable<CMSite.Models.客戶資料>

@{
    ViewBag.Title = "Index";
}

<h2>客戶資料管理Index</h2>
<form method="get">
    <div class="form-inline">
        <select name="SearchId">
            <option value="0">客戶名稱</option>
            <option value="1">統一編號</option>
            <option value="2">電話</option>
            <option value="3">傳真</option>
            <option value="4">地址</option>
            <option value="5">Email</option>
        </select>
        <input type="search" name="keyword" placeholder="請輸入關鍵字" class="form-control" />
        <input type="submit" value="搜尋" class="btn btn-primary" />
    </div>
</form>
<br />
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<div class="table-responsive">
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.ActionLink("客戶名稱", "Index", new { keyword = ViewBag.Keyword, sort = ViewBag.NameOrder })
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.統一編號)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.電話)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.傳真)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.地址)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.客戶名稱)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.統一編號)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.電話)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.傳真)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.地址)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        <div class="form-inline">
                            <div>
                                @Html.ActionLink("編輯", "Edit", new { id = item.Id }, new { @class = "btn btn-warning" })
                            </div>
                            <div>
                                @Html.ActionLink("明細", "Details", new { id = item.Id }, new { @class = "btn btn-info" })
                            </div>
                            <div>
                                @using (Html.BeginForm("Delete", "Data", new { id = item.Id }, FormMethod.Post))
                                {
                                    @Html.AntiForgeryToken()
                                    <input type="submit" value="刪除" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this?');" />
                                }
                            </div>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
